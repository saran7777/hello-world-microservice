pipeline {
    agent any
    parameters {
        string(name: 'GIT_URL', defaultValue: 'https://github.com/your-github-url/hello-world-microservice.git', description: 'URL of the Git repository')
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[
                            url: params.GIT_URL,
                            credentialsId: 'github-credentials'
                        ]]
                    ])
                }
            }
        }
        // More stages here...
    }
}
